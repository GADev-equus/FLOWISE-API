# Core
NODE_ENV=development
PORT=8000
API_PREFIX=/api/v1

# Deployment
APP_URL=https://your-app-url.example

# Mongo
MONGODB_URI=mongodb://localhost:27017/flowise

# CORS
# Comma-separated list of allowed origins (no spaces, no trailing slashes)
# Production: https://flow.equussystems.co
# Development: http://localhost:5173,http://localhost:5174
CORS_ORIGINS=https://flow.equussystems.co,http://localhost:5173,http://localhost:5174

# Email (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=api@example.com
EMAIL_PASS=change-me
EMAIL_FROM="FLOWISE API" <noreply@your-domain.com>
EMAIL_TIMEOUT=10000
EMAIL_RETRY_ATTEMPTS=3

# Email alert recipients
ISSUE_ALERT_TO=issues@your-domain.com
SUMMARY_REPORT_ALERT_TO=reports@your-domain.com
STUDENT_ALERT_TO=students@your-domain.com

# Legacy Resend configuration (optional fallback)
# RESEND_API_KEY=your_resend_api_key
# MAIL_FROM="FLOWISE API" <noreply@your-domain.com>
